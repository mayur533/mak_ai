# AI Assistant System Configuration
# Copy this file to .env and fill in your API keys

# Gemini API Configuration
GEMINI_API_KEY=your_primary_gemini_api_key_here
GEMINI_API_KEY_SECONDARY=your_secondary_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# System Configuration
MAX_HISTORY=100
MAX_RETRIES=3
LOG_LEVEL=INFO

# Database Configuration
DB_PATH=db/agent_memory.db

# Directory Configuration
BASE_DIR=.
TOOLS_DIR=tools
TEMP_DIR=temp
TEST_DIR=test
OUTPUT_DIR=output
LOG_DIR=log

# Voice Configuration (Optional)
VOICE_ENABLED=false
TTS_LANGUAGE=en
TTS_SPEED=1.0

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Google Search Configuration (Optional)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Context Management Configuration
CONTEXT_CACHE_SIZE=1000
CONTEXT_MAX_LENGTH=50000
SESSION_PERSISTENCE=true

# Gemini API Advanced Configuration
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40
GEMINI_SAFETY_SETTINGS=moderate
